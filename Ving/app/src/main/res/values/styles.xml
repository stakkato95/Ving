<resources>
    <style name="VingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorTertiary">@color/secondary_text</item>
        <item name="android:textColorSecondary">@color/icons</item>
        <item name="android:windowBackground">@color/icons</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:divider">@color/divider</item>
    </style>
    
    <style name="Widget.AppCompat.ListView.VingListView" parent="Widget.AppCompat.ListView.Menu">
        <item name="android:divider">@drawable/horizontal_divider</item>
    </style>

    <style name="Widget.AppCompat.Light.AutoCompleteTextView.ProfileTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.AppCompat.Light.AutoCompleteTextView.ProfileHeader" parent="Widget.AppCompat.Light.AutoCompleteTextView.ProfileTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.AppCompat.Light.AutoCompleteTextView.ProfileDescription" parent="Widget.AppCompat.Light.AutoCompleteTextView.ProfileTextView">
        <item name="android:textSize">14sp</item>
    </style>
    
</resources>
